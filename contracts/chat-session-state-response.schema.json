{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://booksearch/contracts/chat-session-state-response.schema.json",
  "title": "Chat Session State Response",
  "type": "object",
  "required": ["version", "trace_id", "request_id", "status", "session"],
  "properties": {
    "version": {
      "type": "string",
      "const": "v1"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "request_id": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["ok"]
    },
    "session": {
      "type": "object",
      "required": [
        "session_id",
        "fallback_count",
        "fallback_escalation_threshold",
        "escalation_ready",
        "recommended_action",
        "recommended_message",
        "unresolved_context"
      ],
      "properties": {
        "session_id": {
          "type": "string",
          "minLength": 1
        },
        "fallback_count": {
          "type": "integer",
          "minimum": 0
        },
        "fallback_escalation_threshold": {
          "type": "integer",
          "minimum": 1
        },
        "escalation_ready": {
          "type": "boolean"
        },
        "recommended_action": {
          "type": "string"
        },
        "recommended_message": {
          "type": "string"
        },
        "unresolved_context": {
          "type": ["object", "null"],
          "required": [
            "reason_code",
            "reason_message",
            "next_action",
            "trace_id",
            "request_id",
            "updated_at",
            "query_preview"
          ],
          "properties": {
            "reason_code": {
              "type": "string"
            },
            "reason_message": {
              "type": "string"
            },
            "next_action": {
              "type": "string"
            },
            "trace_id": {
              "type": "string"
            },
            "request_id": {
              "type": "string"
            },
            "updated_at": {
              "type": "integer",
              "minimum": 0
            },
            "query_preview": {
              "type": "string"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
