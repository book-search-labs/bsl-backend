{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "query-enhance-response.schema.json",
  "title": "QueryEnhanceResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "trace_id", "request_id", "decision", "strategy", "reason_codes"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "decision": { "type": "string", "enum": ["RUN", "SKIP"] },
    "strategy": {
      "type": "string",
      "enum": ["SPELL_ONLY", "REWRITE_ONLY", "SPELL_THEN_REWRITE", "RAG_REWRITE", "NONE"]
    },
    "reason_codes": {
      "type": "array",
      "items": { "type": "string" }
    },
    "spell": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "applied": { "type": "boolean" },
        "original": { "type": "string" },
        "corrected": { "type": "string" },
        "method": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },
    "rewrite": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "applied": { "type": "boolean" },
        "rewritten": { "type": "string" },
        "method": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "notes": { "type": "string" }
      }
    },
    "final": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "text": { "type": "string" },
        "source": { "type": "string" }
      }
    },
    "hints": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "acceptance": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "reason": { "type": "string" },
            "recommended_accept_if": { "type": "array", "items": { "type": "string" } }
          }
        }
      }
    },
    "rag": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "candidate_count": { "type": "integer", "minimum": 0 },
        "source": { "type": "string" },
        "degraded": { "type": "boolean" },
        "reason_code": { "type": "string" }
      }
    },
    "cache": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enhance_hit": { "type": "boolean" },
        "deny_hit": { "type": "boolean" }
      }
    },
    "debug": { "type": "object", "additionalProperties": true }
  }
}
