{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "query-context.schema.json",
  "title": "QueryContext",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "trace_id", "request_id", "query", "spell", "rewrite", "understanding", "retrieval_hints"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },

    "client": { "type": ["object", "null"], "additionalProperties": true },
    "user": { "type": ["object", "null"], "additionalProperties": true },

    "query": {
      "type": "object",
      "additionalProperties": false,
      "required": ["raw", "normalized", "canonical", "language", "tokens"],
      "properties": {
        "raw": { "type": "string" },
        "normalized": { "type": "string" },
        "canonical": { "type": "string" },
        "language": {
          "type": "object",
          "additionalProperties": false,
          "required": ["detected", "confidence"],
          "properties": {
            "detected": { "type": "string", "minLength": 1 },
            "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
          }
        },
        "tokens": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "spell": {
      "type": "object",
      "additionalProperties": false,
      "required": ["applied", "original", "corrected", "method", "confidence"],
      "properties": {
        "applied": { "type": "boolean" },
        "original": { "type": "string" },
        "corrected": { "type": "string" },
        "method": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    },

    "rewrite": {
      "type": "object",
      "additionalProperties": false,
      "required": ["applied", "rewritten", "method", "notes"],
      "properties": {
        "applied": { "type": "boolean" },
        "rewritten": { "type": "string" },
        "method": { "type": "string" },
        "notes": { "type": "string" }
      }
    },

    "understanding": {
      "type": "object",
      "additionalProperties": false,
      "required": ["intent", "entities", "filters"],
      "properties": {
        "intent": { "type": "string", "minLength": 1 },
        "entities": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true }
        },
        "filters": {
          "type": "object",
          "additionalProperties": true
        }
      }
    },

    "retrieval_hints": {
      "type": "object",
      "additionalProperties": false,
      "required": ["strategy", "top_k", "time_budget_ms", "boost"],
      "properties": {
        "strategy": { "type": "string", "minLength": 1 },
        "top_k": { "type": "integer", "minimum": 1 },
        "time_budget_ms": { "type": "integer", "minimum": 1 },
        "boost": {
          "type": "object",
          "additionalProperties": { "type": "number" }
        }
      }
    }
  }
}
