{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "home-preorders-response.schema.json",
  "title": "HomePreordersResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "trace_id",
    "request_id",
    "items",
    "count",
    "total_count",
    "limit"
  ],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": ["string", "null"] },
    "request_id": { "type": ["string", "null"] },
    "count": { "type": "integer", "minimum": 0 },
    "total_count": { "type": "integer", "minimum": 0 },
    "limit": { "type": "integer", "minimum": 1, "maximum": 60 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "preorder_id",
          "doc_id",
          "title_ko",
          "authors",
          "reserved_count",
          "reserved_by_me",
          "reserved_qty"
        ],
        "properties": {
          "preorder_id": { "type": "integer", "minimum": 1 },
          "doc_id": { "type": ["string", "null"] },
          "title_ko": { "type": ["string", "null"] },
          "authors": {
            "type": "array",
            "items": { "type": "string" }
          },
          "publisher_name": { "type": ["string", "null"] },
          "issued_year": { "type": ["integer", "null"] },
          "subtitle": { "type": ["string", "null"] },
          "summary": { "type": ["string", "null"] },
          "badge": { "type": ["string", "null"] },
          "cta_label": { "type": ["string", "null"] },
          "preorder_price": { "type": ["integer", "null"] },
          "preorder_price_label": { "type": ["string", "null"] },
          "list_price": { "type": ["integer", "null"] },
          "list_price_label": { "type": ["string", "null"] },
          "discount_rate": { "type": ["integer", "null"] },
          "preorder_start_at": { "type": ["string", "null"] },
          "preorder_end_at": { "type": ["string", "null"] },
          "release_at": { "type": ["string", "null"] },
          "reservation_limit": { "type": ["integer", "null"] },
          "reserved_count": { "type": "integer", "minimum": 0 },
          "remaining": { "type": ["integer", "null"] },
          "reserved_by_me": { "type": "boolean" },
          "reserved_qty": { "type": "integer", "minimum": 0 }
        }
      }
    }
  }
}
