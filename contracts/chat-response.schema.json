{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "chat-response.schema.json",
  "title": "ChatResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "trace_id", "request_id", "status", "answer", "sources", "citations"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "status": { "type": "string", "minLength": 1 },
    "reason_code": { "type": "string", "minLength": 1 },
    "recoverable": { "type": "boolean" },
    "next_action": { "type": "string", "minLength": 1 },
    "retry_after_ms": { "type": ["integer", "null"], "minimum": 0 },
    "answer": { "$ref": "#/$defs/message" },
    "sources": {
      "type": "array",
      "items": { "$ref": "#/$defs/source" }
    },
    "citations": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "$defs": {
    "message": {
      "type": "object",
      "additionalProperties": false,
      "required": ["role", "content"],
      "properties": {
        "role": { "type": "string", "minLength": 1 },
        "content": { "type": "string", "minLength": 1 }
      }
    },
    "source": {
      "type": "object",
      "additionalProperties": false,
      "required": ["citation_key", "doc_id", "chunk_id", "title", "url", "snippet"],
      "properties": {
        "citation_key": { "type": "string", "minLength": 1 },
        "doc_id": { "type": "string", "minLength": 1 },
        "chunk_id": { "type": "string", "minLength": 1 },
        "title": { "type": "string" },
        "url": { "type": "string" },
        "snippet": { "type": "string" }
      }
    }
  }
}
