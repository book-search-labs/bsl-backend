{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "reindex-job-create-request.schema.json",
  "title": "ReindexJobCreateRequest",
  "type": "object",
  "additionalProperties": false,
  "required": ["logical_name"],
  "properties": {
    "logical_name": { "type": "string", "minLength": 1 },
    "params": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "index_prefix": { "type": "string" },
        "mapping_path": { "type": "string" },
        "delete_existing": { "type": "boolean" },
        "batch_size": { "type": "integer", "minimum": 1 },
        "bulk_size": { "type": "integer", "minimum": 1 },
        "retry_max": { "type": "integer", "minimum": 0 },
        "retry_backoff_sec": { "type": "number", "minimum": 0 },
        "max_failures": { "type": "integer", "minimum": 0 },
        "bulk_delay_sec": { "type": "number", "minimum": 0 },
        "refresh_interval_bulk": { "type": "string" },
        "refresh_interval_post": { "type": "string" },
        "material_kinds": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
