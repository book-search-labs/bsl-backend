{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "kdc-category-response.schema.json",
  "title": "KdcCategoryResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "trace_id", "request_id", "categories"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "categories": {
      "type": "array",
      "items": { "$ref": "#/$defs/kdcNode" }
    }
  },
  "$defs": {
    "kdcNode": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "code", "name", "depth", "children"],
      "properties": {
        "id": { "type": "integer" },
        "code": { "type": "string" },
        "name": { "type": "string" },
        "depth": { "type": "integer" },
        "children": {
          "type": "array",
          "items": { "$ref": "#/$defs/kdcNode" }
        }
      }
    }
  }
}
