{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "home-benefits-response.schema.json",
  "title": "HomeBenefitsResponse",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "version",
    "trace_id",
    "request_id",
    "today",
    "items",
    "count",
    "total_count",
    "limit"
  ],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": ["string", "null"] },
    "request_id": { "type": ["string", "null"] },
    "today": { "type": "string", "minLength": 1 },
    "count": { "type": "integer", "minimum": 0 },
    "total_count": { "type": "integer", "minimum": 0 },
    "limit": { "type": "integer", "minimum": 1, "maximum": 50 },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "item_id",
          "title",
          "discount_type",
          "discount_value"
        ],
        "properties": {
          "item_id": { "type": "integer", "minimum": 1 },
          "benefit_code": { "type": ["string", "null"] },
          "badge": { "type": ["string", "null"] },
          "title": { "type": "string", "minLength": 1 },
          "description": { "type": ["string", "null"] },
          "discount_type": { "type": ["string", "null"] },
          "discount_value": { "type": ["integer", "null"] },
          "discount_label": { "type": ["string", "null"] },
          "min_order_amount": { "type": ["integer", "null"] },
          "min_order_amount_label": { "type": ["string", "null"] },
          "max_discount_amount": { "type": ["integer", "null"] },
          "max_discount_amount_label": { "type": ["string", "null"] },
          "valid_from": { "type": ["string", "null"] },
          "valid_to": { "type": ["string", "null"] },
          "daily_limit": { "type": ["integer", "null"] },
          "remaining_daily": { "type": ["integer", "null"] },
          "link_url": { "type": ["string", "null"] },
          "cta_label": { "type": ["string", "null"] }
        }
      }
    }
  }
}
