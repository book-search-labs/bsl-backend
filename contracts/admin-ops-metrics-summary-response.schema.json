{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "admin-ops-metrics-summary-response.schema.json",
  "title": "AdminOpsMetricsSummaryResponse",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "trace_id", "request_id", "summary"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "trace_id": { "type": "string", "minLength": 1 },
    "request_id": { "type": "string", "minLength": 1 },
    "summary": {
      "type": "object",
      "additionalProperties": false,
      "required": ["query_count", "p95_ms", "p99_ms", "zero_result_rate", "rerank_rate", "error_rate"],
      "properties": {
        "query_count": { "type": "integer", "minimum": 0 },
        "p95_ms": { "type": "number", "minimum": 0 },
        "p99_ms": { "type": "number", "minimum": 0 },
        "zero_result_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "rerank_rate": { "type": "number", "minimum": 0, "maximum": 1 },
        "error_rate": { "type": "number", "minimum": 0, "maximum": 1 }
      }
    }
  }
}
