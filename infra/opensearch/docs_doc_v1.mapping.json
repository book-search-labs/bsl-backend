{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "1s",
    "analysis": {
      "normalizer": {
        "keyword_lower": {
          "type": "custom",
          "filter": ["lowercase"]
        }
      },
      "filter": {
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        }
      },
      "analyzer": {
        "rag_index": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase"]
        },
        "rag_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase"]
        },
        "rag_en_index": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "english_stop", "english_stemmer"]
        },
        "rag_en_search": {
          "type": "custom",
          "tokenizer": "standard",
          "filter": ["lowercase", "english_stop", "english_stemmer"]
        }
      }
    }
  },
  "mappings": {
    "dynamic": "strict",
    "properties": {
      "doc_id": { "type": "keyword" },
      "chunk_id": { "type": "keyword" },
      "source_id": { "type": "keyword" },
      "citation_key": { "type": "keyword" },
      "title": {
        "type": "text",
        "analyzer": "rag_index",
        "search_analyzer": "rag_search",
        "fields": {
          "raw": { "type": "keyword", "normalizer": "keyword_lower" }
        }
      },
      "url": { "type": "keyword" },
      "section": { "type": "keyword" },
      "content": {
        "type": "text",
        "analyzer": "rag_index",
        "search_analyzer": "rag_search",
        "term_vector": "with_positions_offsets"
      },
      "content_en": {
        "type": "text",
        "analyzer": "rag_en_index",
        "search_analyzer": "rag_en_search",
        "term_vector": "with_positions_offsets"
      },
      "chunk_index": { "type": "integer" },
      "chunk_total": { "type": "integer" },
      "doc_hash": { "type": "keyword" },
      "updated_at": { "type": "date" }
    }
  }
}
